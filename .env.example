# Python configuration
PYTHONPATH=src
PYTHON_VERSION=3.11.11

# Test configuration
TEST_PARALLEL_JOBS=0  # 0 = auto
TEST_TIMEOUT=300
TEST_COVERAGE_TARGET=95.0

# VSCode configuration
VSCODE_AUTO_DISCOVER=true
VSCODE_SHOW_OUTPUT=true

# AWS Bedrock Configuration
AWS_ACCESS_KEY_ID=your-access-key-here
AWS_SECRET_ACCESS_KEY=your-secret-key-here
AWS_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
AWS_BEDROCK_HEADERS={"anthropic-beta": "prompt-caching-2024-07-31"}

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=test-radar.log

# Cache configuration
CACHE_DIR=.cache
CACHE_TTL=3600  # 1 hour in seconds

# Report configuration
REPORT_DIR=reports
REPORT_FORMAT=html  # html, json, or txt

# LLM Configuration
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=8192
LLM_CONTEXT_WINDOW=100000
