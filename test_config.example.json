{
  "test": {
    "python_path": "python3",
    "test_paths": [
      "test_samples"
    ],
    "exclude_patterns": [
      "__pycache__",
      ".pytest_cache"
    ],
    "parallel_jobs": 2,
    "timeout": 300,
    "coverage_target": 90.0
  },
  "vscode": {
    "auto_discover": true,
    "show_output": true,
    "debug_config": {}
  },
  "llm": {
    "temperature": 0.1,
    "max_tokens": 8192,
    "context_window": 100000
  },
  "log_level": "INFO",
  "cache_dir": ".cache",
  "report_dir": "reports",
  "report_format": "markdown"
}
